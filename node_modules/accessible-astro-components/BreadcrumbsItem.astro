---
const {
  href = '#',
  label = 'Breadcrumb',
  currentPage = false,
} = Astro.props
---

<li class="breadcrumbs__item">
  {
    currentPage
      ? <span>{label}</span>
      : <a href={href}>{label}</a>
  }
</li>

<style is:global>
  .breadcrumbs__item {
    display: inline;
  }

  .breadcrumbs__item::after {
    content: '/';
    margin: 0 0.5rem;
  }

  .breadcrumbs__item:last-child::after {
    content: '';
  }
</style>
